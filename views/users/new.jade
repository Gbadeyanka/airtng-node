extends ../layout

block nav_bg
  nav.navbar.navbar-space

block content
  .container
    h1 Sign up for Airtng
    form(action="/users",method="post")
      .form-group
        label Tell us your name:
        input.form-control(type='text', name="username", placeholder='Zingelbert Bembledack')
      .form-group
        label Enter Your E-mail Address:
        input.form-control(type='text', name="email", placeholder='me@mydomain.com')
      .form-group
        label Enter a password:
        input.form-control(type='password', name="password")
      .form-group
        label Country code:
        input#authy-countries.form-control(type='text', name="countryCode")
      .form-group
        label Phone number:
        .row
          .col-md-2
            input.form-control(type='text', name="areaCode", placeholder="Area Code")
          .col-md-3
            input.form-control(type='text', name="phoneNumber", placeholder="Phone Number")

      button.btn.btn-primary(type='submit') Sign up
